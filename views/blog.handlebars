<div class="'d-flex">
    <div class="card">
        <h5 class="card-title p-3 mb-2 bg-black text-white">{{title}} Posted by {{user.username}} on {{format_date
            date_posted}}</h5>

        <div class="card-body">
            <p class="card-text text-black">{{content}}</p>
            <a href='/blog/{{blog.id}}/addComment' class="btn btn-primary">Add a Comment</a>
        </div>
    </div>
       <div>
      {{#each blog.comments as |comment|}}
      {{> blog-comment}}
      {{/each}}
    </div>
</div>